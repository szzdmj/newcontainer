{
  "name": "shenzhou-app-to-cloudflare",
  "main": "src/worker.ts",
  "compatibility_date": "2025-07-26",
  "compatibility_flags": ["nodejs_compat"],

  // Durable Object 注册
  "durable_objects": {
    "bindings": [
      {
        "name": "MY_CONTAINER",
        "class_name": "MyContainer"
      }
    ]
  },

  // Durable Object migration
  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["MyContainer"]
    }
  ],

  // ✅ 修正后的 containers 配置
  "containers": [
    {
      "name": "shenzhou-app-to-cloudflare-mycontainer",
      "class_name": "MyContainer", // 🔧 必须字段
      "image": "ghcr.io/szzdmj/shenzhou-app:latest",
      "instance_type": "dev"
    }
  ]
}
